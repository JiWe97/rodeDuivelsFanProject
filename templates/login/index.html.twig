{% extends 'base.html.twig' %}

{% block title %}1895 - Welkom!{% endblock %}

{% block body %}
<style>
    .container { 
        display: flex; 
        justify-content: center; 
        align-items: center; 
        height: 80vh; 
        margin: 0 150px;
    }
    .container > div { 
        flex: 1; 
        padding: 20px; 
        box-sizing: border-box; 
        display: flex; 
        flex-direction: column; 
        justify-content: center; 
        align-items: center; 
        text-align: center;
        
    }
    .button {
        display: flex;
        justify-content: center;
        margin-top: -170px;
    }
</style>


<form method="post">
{{ form_start(form) }}
    <div class="container">
        <div class="left-box">
            <p>Als lid van 1895 krijg je een mooi geschenk. Je hebt de keuze tussen een sjaal, een pet en een vlag. Vul hier je geboortedatum en lidnummer in en maak je keuze.</p>
        </div>
        <div class="middle-box">
            {{ form_widget(form.geboortedatum) }}
        </div>
        <div class="right-box">
            {{ form_widget(form.lidnummer) }}
        </div>
    </div>
    <div class="button">
        {{ form_widget(form.Volgende) }}
    </div>
{{ form_end(form) }}
</form>

{% endblock %}
